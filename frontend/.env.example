# LXCloud Frontend Environment Configuration
# Copy this file to .env and modify as needed

# Backend API URL
# For development: http://localhost:5000/api
# For production: /api (relative to frontend host)
# For specific IP: http://192.168.1.100:5000/api
REACT_APP_API_URL=

# Backend host (used when REACT_APP_API_URL is not set)
# Leave empty to use the same host as frontend
REACT_APP_BACKEND_HOST=

# Backend port (used when REACT_APP_API_URL is not set)
# Default is 5000 for development
REACT_APP_BACKEND_PORT=5000

# Environment
NODE_ENV=production